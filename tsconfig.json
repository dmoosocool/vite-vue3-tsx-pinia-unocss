{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dest",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node","vitest/globals"],
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src", "test", "shims.d.ts", "env.d.ts", "global.d.ts"]
}
